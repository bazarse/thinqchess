rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Gallery images - public read, admin write
    match /gallery/{allPaths=**} {
      allow read: if true; // Public read
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admin_users/$(request.auth.uid));
    }
    
    // Blog images - public read, admin write
    match /blogs/{blogSlug}/{allPaths=**} {
      allow read: if true; // Public read
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admin_users/$(request.auth.uid));
    }
    
    // User profile pictures - users can manage their own
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true; // Public read
      allow write: if request.auth != null && 
        (request.auth.uid == userId || 
         exists(/databases/$(database)/documents/admin_users/$(request.auth.uid)));
    }
    
    // Tournament files - admin only
    match /tournaments/{tournamentId}/{allPaths=**} {
      allow read: if true; // Public read
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admin_users/$(request.auth.uid));
    }
    
    // Validate file size and type
    function isValidImage() {
      return resource.size < 5 * 1024 * 1024 && // 5MB limit
        resource.contentType.matches('image/.*');
    }
    
    function isValidDocument() {
      return resource.size < 10 * 1024 * 1024 && // 10MB limit
        (resource.contentType.matches('application/pdf') ||
         resource.contentType.matches('application/msword') ||
         resource.contentType.matches('application/vnd.openxmlformats-officedocument.*'));
    }
  }
}
